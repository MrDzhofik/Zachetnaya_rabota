<div class='login_form container'>
  <h2 class='login_text'>Изменение пользователя</h2>
  <%= stylesheet_link_tag "edit_user.css" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: {turbo: false} }) do |f| %>

    <div class="field mb-3">
      <%= f.label :email, class: 'login_text form-label' %>Почта<br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: 'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: 'login_text form-label'%> <i>(Оставьте пустым если не хотите изменить его)</i><br />
      <%= f.password_field :password, autocomplete: "new-password",  class: 'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: 'login_text form-label' %>Подтвердите пароль<br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :current_password, class: 'login_text form-label' %> <i>Старый пароль</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <%#  <div class="field"> %> 
      <%# <%= f.label :image_url<br />  %>
      <%# <%= f.text_field :image_url, class: 'add_image_url' %>
    <%# </div> %>

    <div class="actions">
      <%= f.submit "Обновить", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<div class='error'>
   <%= render "devise/shared/error_messages", resource: resource %>
</div>
