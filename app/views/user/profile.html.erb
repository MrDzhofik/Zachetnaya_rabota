<%= stylesheet_link_tag "profile.css" %>
<h1><%= @username %></h1>
<div class='about'>
    <table class="table table-hover" style="width: 540px">
      <tr>
        <td>
          <%= "#{t('fav_club')}"%>:
        </td>
        <td> 
          <span class='favsb'><%= @fav_club_name %></span> 
        </td>
      </tr>
      <tr>
        <td>
          <%= "#{t('comments_count')}"%>:
        </td>
        <td>
          <span class='guest'> <%= @guest %></span>
        </td>
      </tr>
    </table>
    <% if @curr_info.image.attached? %>
        <div class='image'>
            <%= image_tag @avatar, class: "image", width: "40%" %>
        </div>
    <% else %>
        <div class='image'>
            <%= image_tag 'ampbil.jpeg', class: "image", width: "40%" %>
        </div>
    <% end %>

</div>
</br>
<%= button_to "#{t('update')}", edit_user_about_path(locale, current_user.id), method: :get %>
